<h3> Portfolio Items </h3>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_item.each do |item| %>
	<p><%= link_to item.title,portfolio_path(item.id) %></p>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>
	<!-- <p><%= item.main_image %></p> -->
	<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfolio_path(item.id) %>
	<%= link_to "Delete Portfolio", item, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>